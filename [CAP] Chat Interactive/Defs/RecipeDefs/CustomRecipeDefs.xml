<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef Name="GenderSwapSurgery" ParentName="SurgeryFlesh">
    <defName>GenderSwapSurgery</defName>
    <label>gender swap</label>
    <description>Performs a gender swap on the patient.</description>
    <workerClass>CAP_ChatInteractive.Commands.CommandHandlers.GenderSwapRecipeWorker</workerClass>
    <!-- Custom worker -->
    <ingredients>
      <!-- Add any required ingredients, e.g., medicine -->
      <li>
        <filter>
          <thingDefs>
            <li>MedicineIndustrial</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <defaultIngredientFilter>
      <thingDefs>
        <li>MedicineIndustrial</li>
      </thingDefs>
    </defaultIngredientFilter>
    <researchPrerequisite>ComplexSurgery</researchPrerequisite>
    <!-- Or whatever prereq you want -->
    <fixedIngredientFilter>
      <thingDefs>
        <li>MedicineIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <skillRequirements>
      <Medicine>10</Medicine>
    </skillRequirements>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <workAmount>4000</workAmount>
    <!-- Surgery duration -->
    <anesthetize>true</anesthetize>
    <surgerySuccessChanceFactor>1</surgerySuccessChanceFactor>
  </RecipeDef>
</Defs>